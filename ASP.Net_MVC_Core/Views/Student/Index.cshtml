@model List<ASP.Net_MVC_Core.Models.Student>
<div class="container">
    <div class="row list_container">
        <div class="title col-12">Danh sách sinh viên </div>
        <div class="row">
            <div class="col-md-6">
                Tìm theo mã sinh viêm :

            </div>
            <div class="col-md-6">
                <button  onclick="location.href='@Url.Action("CreateStudent", "Student")'">
                    Thêm
                </button>
            </div>
        </div>

        <div class="data_grid col-12">
            <table>
                <tr>
                    <th>Mã SV</th>
                    <th>Họ và tên</th>
                    <th>Ngày sinh</th>
                    <th>Địa chỉ</th>
                    <th>Lớp học</th>
                </tr>
                @{
                    if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                                <tr>
                                    <td>@item.id</td>
                                    <td>@item.name</td>
                                    <td>@item.birthday.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@item.address_full</td>
                                    <td>@item.classes.name</td>
                                </tr>
                        }
                    }

                }
            </table>
        </div>

    </div>
</div>