@model IEnumerable<ASP.Net_MVC_Core.Models.Class>
<div class="class container">
    <div class="row col-md-12 title">
        <span>Danh sách lớp học</span>
    </div>
    <div>
        <button  onclick="location.href='@Url.Action("CreateClass", "Student")'">
                    Thêm
        </button>
    </div>
    <div class="tbody col-md-12">
        <table>
            <tr class="col-md-12">
                <th class="col-md-3">Mã lớp</th>
                <th class="col-md-6">Tên lớp</th>
                <th class="col-md-6">Trạng thái</th>
                <th class="col-md-3">...</th>
            </tr>
            @{
                if(Model.Any())
                {
                    foreach(var item in Model)
                    {
                        <tr>

                            <td class="col-md-3">@item.code</td>
                            <td class="col-md-6">@item.name</td>
                            <td class="col-md-6">
                                @{
                                    if (item.status == 0)
                                    { <span>disable</span>; }
                                    else
                                    { <span>enable</span>; }
                                }

                            </td>
                            <td class="col-md-3">
                                @Html.ActionLink("Sửa", "ClassEdit", "Student", new { id=item.id }, new {@class = "btn btn-primary" })
                                @Html.ActionLink("Xóa", "ClassDelete", "Student", new { id = item.id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                        
                    }
                }
            }
        </table>
    </div>
</div>